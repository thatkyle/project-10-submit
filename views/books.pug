extends layout

block content
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      for book in books
        tr
          td
            a(href=`/books/book_detail/${book.id}`) #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.year}